<?xml version="1.0" encoding="UTF-8"?>
<ControlTemplate xmlns="http://xamarin.com/schemas/2014/forms" 
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="OrientationLayoutDemo.Views.Template.Vertical.HomeVerticalTpl">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid Grid.Row="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="40"/>
                <RowDefinition Height="140"/>
            </Grid.RowDefinitions>
            <Label Text="Top Section" HorizontalOptions="CenterAndExpand" HorizontalTextAlignment="Center"/>
            <BoxView BackgroundColor="Orange" Grid.Row="1"/>
        </Grid>
        <Grid Grid.Row="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="40"/>
                <RowDefinition Height="140"/>
            </Grid.RowDefinitions>
            <Label Text="Bottom Section" HorizontalOptions="CenterAndExpand" HorizontalTextAlignment="Center"/>
            <BoxView BackgroundColor="Purple"  Grid.Row="1"/>
        </Grid>
    </Grid>
</ControlTemplate>